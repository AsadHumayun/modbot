{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"noUnusedLocals": true,
		"strict": true,
		"strictNullChecks": true,
		"rootDir": "./"
	},
	
	"exclude": [
		"node_modules",
		".vscode",
		".idea",
		"vs",
		".VSCodeCounter",
		"$bin",
		".idlerc",
	]
}
